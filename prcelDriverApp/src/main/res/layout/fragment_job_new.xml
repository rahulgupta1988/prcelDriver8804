<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <RelativeLayout
                android:layout_weight=".35"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#456CFA"
                android:gravity="center">
               <ImageView
                   android:layout_below="@+id/vew1"
                   android:id="@+id/notify_ic1"
                   android:layout_width="120dp"
                   android:layout_height="100dp"
                   android:src="@drawable/notification_icon_job"
                   android:layout_centerHorizontal="true"
                   />

                <com.parcelsixd.parcel.driver.widget.MyFontTextView
                    android:id="@+id/text9"
                    android:layout_below="@+id/notify_ic1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:text="You have a new job"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    />
                <View
                    android:layout_below="@+id/text9"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

             <View
                 android:layout_weight=".3"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".62"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:background="@drawable/rect_white">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight=".22"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical">

              <RelativeLayout
                  android:layout_weight="0.5"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_centerVertical="true"
                  android:gravity="center">

                  <com.parcelsixd.parcel.driver.widget.MyFontTextView
                      android:id="@+id/client_txt"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Client Name"
                      android:textColor="#636363"
                      android:textSize="13sp"
                      />

                  <com.parcelsixd.parcel.driver.widget.MyFontTextView
                      android:layout_below="@+id/client_txt"
                      android:id="@+id/tvClientName"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Denish Efremov"
                      android:textColor="#000000"
                      android:textSize="16sp"
                      android:maxLength="20"
                      android:ellipsize="end"
                      />


                  <com.parcelsixd.parcel.driver.widget.MyFontTextView
                      android:layout_below="@+id/tvClientName"
                      android:id="@+id/client_id"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="ID:00"
                      android:textColor="#636363"
                      android:textSize="13sp"
                      android:visibility="gone"
                      />

              </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right">

                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:id="@+id/pak_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Small Package"
                        android:textColor="#636363"
                        android:textSize="13sp"
                        />



                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:layout_below="@+id/pak_type"
                        android:id="@+id/pak_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID:00"
                        android:textColor="#636363"
                        android:textSize="13sp"
                        android:visibility="gone"
                        />

                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:layout_below="@+id/pak_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:visibility="invisible"
                        />
                </RelativeLayout>



            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#ececec"/>

            <LinearLayout
               android:orientation="horizontal"
                android:layout_weight=".15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#ffffff"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_weight=".03"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:gravity="center">

                    <View
                        android:layout_weight=".3"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="#ececec"/>

                    <ImageView
                        android:id="@+id/cal_ic"
                        android:layout_weight=".4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/calendar_ic"
                        android:gravity="center"></ImageView>

                    <View
                        android:layout_weight=".3"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="#ececec"/>

                </LinearLayout>


                <RelativeLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:id="@+id/booking_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Booking"
                        android:textColor="#636363"
                        android:textSize="13sp"
                        />

                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:layout_below="@+id/booking_txt"
                        android:id="@+id/booking_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18sep-09:00pm"
                        android:textColor="#303030"
                        android:textSize="14sp"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight=".4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:visibility="gone">

                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:id="@+id/delv_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                        android:textColor="#636363"
                        android:textSize="13sp"
                        />


                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:layout_below="@+id/delv_txt"
                        android:id="@+id/delivery_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20sep-09:00pm"
                        android:textColor="#303030"
                        android:textSize="14sp"
                        />

                </RelativeLayout>



            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#ececec"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight=".48"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:background="#ffffff">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight=".1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_weight=".2"
                        android:layout_width="25dp"
                        android:layout_height="0dp"
                        android:src="@drawable/pin_green_ic"
                        android:layout_gravity="center"/>

                    <View
                        android:layout_weight=".3"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="#000000"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_weight=".2"
                        android:layout_width="25dp"
                        android:layout_height="0dp"
                        android:src="@drawable/pin_red_ic"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight=".9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_weight="0.45"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <com.parcelsixd.parcel.driver.widget.MyFontTextView
                            android:id="@+id/pick_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pickup Address"
                            android:textColor="#636363"
                            android:textSize="13sp"
                            />

                        <com.parcelsixd.parcel.driver.widget.MyFontTextView
                            android:layout_below="@+id/pick_txt"
                            android:id="@+id/pickup_add"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="18sep-09:00pm"
                            android:textColor="#303030"
                            android:textSize="14sp"
                            />


                    </RelativeLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="#ececec"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"/>

                    <RelativeLayout
                        android:layout_weight="0.45"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <com.parcelsixd.parcel.driver.widget.MyFontTextView
                            android:id="@+id/dest_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="destination Address"
                            android:textColor="#636363"
                            android:textSize="13sp"
                            />

                        <com.parcelsixd.parcel.driver.widget.MyFontTextView
                            android:layout_below="@+id/dest_txt"
                            android:id="@+id/dest_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="18sep-09:00pm"
                            android:textColor="#303030"
                            android:textSize="14sp"
                            />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#ececec"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:weightSum="1">
                <View
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></View>

                <RelativeLayout
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                <com.parcelsixd.parcel.driver.widget.MyFontTextView
                    android:id="@+id/price_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price    $"
                    android:textColor="#636363"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:id="@+id/price"
                        android:layout_toRightOf="@+id/price_txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="96"
                        android:textColor="#4e4e4e"
                        android:textSize="30sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:textStyle="bold"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_startjob"
                android:orientation="vertical"
                android:layout_weight="0.08"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/job_start_btn"
                android:weightSum="1"
                android:gravity="center">


                <com.parcelsixd.parcel.driver.widget.MyFontTextView
                    android:id="@+id/job_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Start Job"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <ImageView
                    android:layout_toRightOf="@+id/job_txt"
                    android:id="@+id/job_ic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/start_job_btn"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>