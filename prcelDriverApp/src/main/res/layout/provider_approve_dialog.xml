<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/driver_approval"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <com.parcelsixd.parcel.driver.widget.MyFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_approve"
            android:textColor="@color/white"
            android:textSize="@dimen/size_general_small"
            android:layout_marginTop="50dp"/>

        <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_approve_by_admin"
            android:textColor="@color/white"
            android:textSize="@dimen/size_general"
            android:layout_marginTop="20dp"/>

        <com.parcelsixd.parcel.driver.widget.MyFontTextView
            android:id="@+id/tvApprovedClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow_new"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</RelativeLayout>