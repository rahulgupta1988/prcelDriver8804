<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#4B72FB">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_arrow_new"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"/>

        <com.parcelsixd.parcel.driver.widget.MyFontTextView
            android:id="@+id/tvLoginForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_fp_margin_top"
            android:paddingTop="@dimen/dimen_fp_margin"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <FrameLayout
        android:layout_weight=".4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner_reset"
            android:scaleType="centerCrop"/>


    </FrameLayout>

    <View
        android:layout_weight=".03"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">


    <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
        android:id="@+id/etoldpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Old Password"
        android:textColor="#393939"
        android:background="@null"
        android:textColorHint="#393939"
        android:inputType="textPassword"></com.parcelsixd.parcel.driver.widget.MyFontEdittextView>
    <View
        android:layout_below="@+id/etoldpass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8ca4ff"
        android:layout_marginTop="10dp"
       />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

    <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
        android:id="@+id/etnewpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:textColor="#393939"
        android:background="@null"
        android:textColorHint="#393939"
        android:inputType="textPassword"
    ></com.parcelsixd.parcel.driver.widget.MyFontEdittextView>

    <View
        android:layout_below="@+id/etnewpass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8ca4ff"
        android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight=".1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

    <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
        android:id="@+id/etconfirmpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textColor="#393939"
        android:background="@null"
        android:textColorHint="#393939"
        android:inputType="textPassword"
       ></com.parcelsixd.parcel.driver.widget.MyFontEdittextView>
    <View
        android:layout_below="@+id/etconfirmpass"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8ca4ff"
        android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <View
        android:layout_weight=".05"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight=".09"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <com.parcelsixd.parcel.driver.widget.MyFontButton
            android:id="@+id/tcChPass"
            android:layout_weight=".49"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_login"
            android:text="Change Password"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="false"/>
        <View
            android:layout_weight=".02"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <com.parcelsixd.parcel.driver.widget.MyFontButton
            android:id="@+id/tvCancel"
            android:layout_weight=".49"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_regs"
            android:text="Cancel"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>


    </LinearLayout>


</LinearLayout>