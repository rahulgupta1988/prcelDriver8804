<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_scroll_margin" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/llRegisterSocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_fp_margin"
                    android:layout_marginTop="@dimen/dimen_fp_margin"
                    android:gravity="center" >

                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_fp_margin"
                        android:text="@string/text_register_with"
                        android:textColor="@color/color_text_register"
                        android:textSize="@dimen/size_general" />

                    <ImageButton
                        android:id="@+id/btnRegisterFb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/fb_register" />

                    <com.parcelsixd.parcel.driver.widget.MyFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_fp_margin"
                        android:layout_marginRight="@dimen/dimen_fp_margin"
                        android:text="@string/text_or"
                        android:textColor="@color/color_text_register"
                        android:textSize="@dimen/size_general" />

                    <ImageButton
                        android:id="@+id/btnRegisterGplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/gmail" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_profile"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivRegisterProfile"
                        android:layout_width="@dimen/menu_img_width"
                        android:layout_height="@dimen/menu_img_height"
                        android:src="@drawable/user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <com.parcelsixd.parcel.driver.widget.MyFontTextViewTitle
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_fp_margin"
                            android:layout_marginRight="@dimen/dimen_fp_margin"
                            android:text="@string/text_upload_picture"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_label" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_history_one"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageButton
                                android:id="@+id/btnClickPhoto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/feedback_margin"
                                android:background="@null"
                                android:src="@drawable/photocam_register" />

                            <ImageButton
                                android:id="@+id/btnPhotoFromGalary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:src="@drawable/picture_register" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin" >

                    <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="@string/text_fname"
                        android:textAllCaps="true"
                        android:textColor="@color/color_text_label"
                        android:textSize="@dimen/size_label" />

                    <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
                        android:id="@+id/etRegisterFName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/text_fname_hint"
                        android:singleLine="true"
                        android:textColor="@color/color_text_dark"
                        android:textSize="@dimen/size_general" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_fp_margin"
                        android:layout_marginTop="@dimen/dimen_fp_margin"
                        android:src="@drawable/divider_register" />

                    <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="@string/text_lname"
                        android:textAllCaps="true"
                        android:textColor="@color/color_text_label"
                        android:textSize="@dimen/size_label" />

                    <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
                        android:id="@+id/etRegisterLName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/text_lname_hint"
                        android:singleLine="true"
                        android:textColor="@color/color_text_dark"
                        android:textSize="@dimen/size_general" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_fp_margin"
                        android:layout_marginTop="@dimen/dimen_fp_margin"
                        android:src="@drawable/divider_register" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_email"
                                android:textAllCaps="true"
                                android:textColor="@color/color_text_label"
                                android:textSize="@dimen/size_label" />

                            <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
                                android:id="@+id/etRegisterEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:ems="10"
                                android:hint="@string/text_email_hint"
                                android:inputType="textEmailAddress"
                                android:singleLine="true"
                                android:textColor="@color/color_text_dark"
                                android:textSize="@dimen/size_general" />
                        </LinearLayout>

                        <com.parcelsixd.parcel.driver.widget.MyFontButton
                            android:id="@+id/btnRegisterEmailInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/info"
                            android:minHeight="0dp"
                            android:minWidth="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivRegisterPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_fp_margin"
                        android:layout_marginTop="@dimen/dimen_fp_margin"
                        android:src="@drawable/divider_register" />

                    <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                        android:id="@+id/tvRegisterPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="@string/text_passs"
                        android:textAllCaps="true"
                        android:textColor="@color/color_text_label"
                        android:textSize="@dimen/size_label" />

                    <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
                        android:id="@+id/etRegisterPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/text_pass_hint"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/color_text_dark"
                        android:textSize="@dimen/size_general" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_fp_margin"
                        android:layout_marginTop="@dimen/dimen_fp_margin"
                        android:src="@drawable/divider_register" />

                    <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="@string/text_number"
                        android:textAllCaps="true"
                        android:textColor="@color/color_text_label"
                        android:textSize="@dimen/size_label" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal" >

                        <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                            android:id="@+id/tvRegisterCountryCode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/activity_margin_register"
                            android:layout_weight="0.4"
                            android:background="@drawable/spinner_ab_default_holo_light"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/color_text_dark"
                            android:textSize="@dimen/size_label" />

                        <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
                            android:id="@+id/etRegisterNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edittext"
                            android:ems="10"
                            android:hint="@string/text_number_hint"
                            android:inputType="numberSigned"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:textColor="@color/color_text_dark"
                            android:textSize="@dimen/size_general" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_fp_margin"
                        android:layout_marginTop="@dimen/dimen_fp_margin"
                        android:src="@drawable/divider_register" />

                    <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="@string/text_address"
                        android:textAllCaps="true"
                        android:textColor="@color/color_text_label"
                        android:textSize="@dimen/size_label" />

                    <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
                        android:id="@+id/etRegisterAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/text_address"
                        android:textColor="@color/color_text_dark"
                        android:textSize="@dimen/size_general" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_fp_margin"
                        android:layout_marginTop="@dimen/dimen_fp_margin"
                        android:src="@drawable/divider_register" />

                    <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="@string/text_zip"
                        android:textAllCaps="true"
                        android:textColor="@color/color_text_label"
                        android:textSize="@dimen/size_label" />

                    <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
                        android:id="@+id/etRegisterZipCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/text_zip"
                        android:singleLine="true"
                        android:textColor="@color/color_text_dark"
                        android:textSize="@dimen/size_general" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_fp_margin"
                        android:layout_marginTop="@dimen/dimen_fp_margin"
                        android:src="@drawable/divider_register" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_taxi_model"
                                android:textAllCaps="true"
                                android:textColor="@color/color_text_label"
                                android:textSize="@dimen/size_label" />

                            <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
                                android:id="@+id/etRegisterModel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:ems="10"
                                android:hint="@string/text_taxi_model"
                                android:inputType="text"
                                android:singleLine="true"
                                android:textColor="@color/color_text_dark"
                                android:textSize="@dimen/size_general" />
                        </LinearLayout>

                        <com.parcelsixd.parcel.driver.widget.MyFontButton
                            android:id="@+id/btnRegisterModelInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/info"
                            android:minHeight="0dp"
                            android:minWidth="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_fp_margin"
                        android:layout_marginTop="@dimen/dimen_fp_margin"
                        android:src="@drawable/divider_register" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <com.parcelsixd.parcel.driver.widget.MyFontTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_taxi_number"
                                android:textAllCaps="true"
                                android:textColor="@color/color_text_label"
                                android:textSize="@dimen/size_label" />

                            <com.parcelsixd.parcel.driver.widget.MyFontEdittextView
                                android:id="@+id/etRegisterTaxiNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:ems="10"
                                android:hint="@string/text_taxi_number"
                                android:singleLine="true"
                                android:textColor="@color/color_text_dark"
                                android:textSize="@dimen/size_general" />
                        </LinearLayout>

                        <com.parcelsixd.parcel.driver.widget.MyFontButton
                            android:id="@+id/btnRegisterTaxiNoInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/info"
                            android:minHeight="0dp"
                            android:minWidth="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <SlidingDrawer
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gridview_height"
            android:layout_alignParentBottom="true"
            android:content="@+id/gvTypes"
            android:handle="@+id/btnSelectService" >

            <com.parcelsixd.parcel.driver.widget.MyFontButton
                android:id="@+id/btnSelectService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_pickup_dark"
                android:text="@string/text_select_service"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <GridView
                android:id="@+id/gvTypes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_select_service"
                android:columnWidth="100dp"
                android:gravity="center"
                android:horizontalSpacing="10dip"
                android:numColumns="2"
                android:stretchMode="spacingWidthUniform"
                android:verticalSpacing="10dip" />
        </SlidingDrawer>
    </RelativeLayout>

    <com.parcelsixd.parcel.driver.widget.MyFontButton
        android:id="@+id/tvRegisterSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_done" />

</LinearLayout>
