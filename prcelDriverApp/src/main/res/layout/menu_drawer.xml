<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/feedback_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivMenuProfile"
            android:layout_width="@dimen/menu_img_width"
            android:layout_height="@dimen/menu_img_height"
            android:src="@drawable/user"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:layout_toRightOf="@+id/ivMenuProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <com.parcelsixd.parcel.driver.widget.MyFontTextViewDrawer
                android:id="@+id/tvMenuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_fname"
                android:textColor="#e8e6e2"
                android:textSize="18sp" />

            <com.parcelsixd.parcel.driver.widget.MyFontTextViewDrawer
                android:id="@+id/tv_viewprofile"
                android:layout_below="@+id/tvMenuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Profile"
                android:textColor="#e0b059"
                android:textSize="14sp" />

        </RelativeLayout>

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/progressbar" />
    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#2d2e34"
    android:layout_marginTop="10dp"/>
</LinearLayout>